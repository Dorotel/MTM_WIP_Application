<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-stylesheet href="../Base.css" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- MTM Brand Colors -->
    <Color x:Key="Primary">#2196F3</Color>
    <Color x:Key="Secondary">#FFC107</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    
    <!-- UI Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    
    <!-- Theme Colors (Default - can be overridden) -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="SecondaryColor">#FFC107</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F5F5F5</Color>
    <Color x:Key="TextColor">#000000</Color>
    <Color x:Key="SecondaryTextColor">#666666</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>
    
    <!-- MTM Specific Colors -->
    <Color x:Key="InventoryGreen">#4CAF50</Color>
    <Color x:Key="TransferBlue">#2196F3</Color>
    <Color x:Key="RemoveRed">#F44336</Color>
    <Color x:Key="TransactionOrange">#FF9800</Color>
    
    <!-- Light Theme Colors -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightSurface">#F5F5F5</Color>
    <Color x:Key="LightOnSurface">#000000</Color>
    
    <!-- Dark Theme Colors -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSurface">#1E1E1E</Color>
    <Color x:Key="DarkOnSurface">#FFFFFF</Color>

</ResourceDictionary>