{
  "Database": {
    "Name": "mtm_wip_application",
    "UserId": "root",
    "Password": "",
    "Port": "3306"
  },
  "Application": {
    "Name": "MTM WIP Application",
    "Version": "2.0.0.0",
    "Environment": "Production"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "EnableDatabaseLogging": true,
    "EnableFileLogging": true,
    "LogRetentionDays": 30
  },
  "Features": {
    "EnableDevelopmentTools": true,
    "EnableAnalyzer": true,
    "EnableMigrationAssessment": true,
    "EnableDebugDashboard": true
  },
  "UI": {
    "DefaultTheme": "Default",
    "DefaultFontSize": 14,
    "EnableDpiScaling": true,
    "TabTimeout": 300
  },
  "Connection": {
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "MonitoringInterval": 5000,
    "RetryAttempts": 3
  }
}