    + Size : Size
}

class "TextBox" CONTROL_STEREOTYPE {
    + Text : string
    + Location : Point
    + Size : Size
}

class "Button" CONTROL_STEREOTYPE {
    + Text : string
    + Location : Point
    + Size : Size
